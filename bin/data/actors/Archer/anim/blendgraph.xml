<?xml version="1.0" ?>
<blendgraph>
	<animations>
		<animation name="power_up">Kanazuchi_Anim_PowerUp.anm</animation>
		<animation name="idle">Kanazuchi_Anim_Idle.anm</animation>
		<animation name="idle_stampfeet">Kanazuchi_Anim_Idle_StampFeet.anm</animation>
		<animation name="first_step">Kanazuchi_Anim_FirstStep.anm</animation>
		<animation name="last_step">Kanazuchi_Anim_LastStep.anm</animation>
		<animation name="walk_cycle">Archer_Anim_Walk.anm</animation>
	</animations>
	<states initial="walk">
		<state name="walk">
			<animation name="walk_cycle" weight="1" speed="1" loop="1" />
		</state>
		<state name="idle">
			<animation name="idle" weight="1" speed="1" />
		</state>
		<state name="idle_turning">
			<animation name="idle_stampfeet" weight="1" speed="1" loop="1" />
		</state>
		<state name="powerup">
			<animation name="power_up" weight="1" speed="1" />
		</state>
		<state name="powerdown">
			<animation name="power_up" weight="1" speed="-1" />
		</state>
		<state name="firststep">
			<animation name="first_step" weight="1" speed="1" />
		</state>
		<state name="laststep">
			<animation name="last_step" weight="1" speed="1" />
		</state>
	</states>
	<transitions>
		<transition from="powerdown" to="powerup" curve="step" />
		<transition from="powerup" to="idle" curve="step" />
		<transition from="powerup" to="firststep" curve="step" />
		<transition from="idle" to="firststep" curve="step" />
		<transition from="idle" to="powerdown" curve="step" />
		<transition from="idle" to="idle_turning" curve="step" />
		<transition from="idle_turning" to="idle" curve="linear" duration="0.5" />
		<transition from="firststep" to="walk" curve="step" />
		<transition from="walk" to="laststep" curve="step" />
		<transition from="laststep" to="idle" curve="step" />
	</transitions>
</blendgraph>